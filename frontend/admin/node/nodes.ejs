<!DOCTYPE html>
<html lang="en" class="h-full bg-black text-white font-space-grotesk antialiased">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= name %> - Nodes
  </title>
  <link rel="stylesheet" href="/assets/tailwind.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap');

    .font-space-grotesk {
      font-family: 'Space Grotesk', sans-serif;
    }

    ::-webkit-scrollbar {
      width: 6px;
    }

    ::-webkit-scrollbar-track {
      background: #000;
    }

    ::-webkit-scrollbar-thumb {
      background: #333;
      border-radius: 3px;
    }
  </style>
</head>

<body class="flex h-full w-full overflow-hidden">

  <%- include('../../components/sidebar', { name, user }) %>

    <main class="relative flex-1 overflow-y-auto bg-black">
      <div class="mx-auto max-w-7xl px-6 py-12 md:px-12 animate-fade-in-up">

        <!-- Header -->
        <div class="mb-12 flex flex-col justify-between gap-6 md:flex-row md:items-end">
          <div>
            <h1 class="text-3xl font-bold tracking-tight text-white md:text-4xl">Nodes</h1>
            <p class="mt-2 text-neutral-400">Manage your infrastructure nodes and allocations.</p>
          </div>
          <div>
            <button onclick="openCreateModal()"
              class="flex items-center gap-2 rounded-lg bg-white px-5 py-2.5 text-sm font-bold text-black transition-transform active:scale-95 hover:bg-neutral-200 hover:scale-105">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="h-5 w-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
              </svg>
              Create Node
            </button>
          </div>
        </div>

        <!-- Nodes Grid -->
        <% if (nodes && nodes.length> 0) { %>
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
            <% nodes.forEach((node, index)=> { %>
              <div style="animation-delay: <%= Math.min(index * 50, 500) %>ms;"
                class="animate-fade-in-up group relative flex flex-col justify-between rounded-2xl border border-neutral-900 bg-neutral-950 p-6 transition-all hover:-translate-y-2 hover:border-neutral-700 hover:shadow-2xl hover:shadow-neutral-900/40">

                <!-- Card Header -->
                <div class="mb-6 flex items-start justify-between">
                  <div class="flex items-center gap-4">
                    <div
                      class="flex h-12 w-12 items-center justify-center rounded-xl bg-neutral-900 text-neutral-400 transition-all duration-300 group-hover:bg-white group-hover:scale-110 group-hover:text-black">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor" class="h-6 w-6">
                        <path stroke-linecap="round" stroke-linejoin="round"
                          d="M21 7.5l-9-5.25-9 5.25m18 0l-9 5.25-9-5.25m18 0L12 21l-9-5.25" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="text-lg font-bold text-white transition-colors group-hover:text-neutral-200">
                        <%= node.name %>
                      </h3>
                      <div class="flex items-center gap-2 text-xs text-neutral-500">
                        <span class="font-mono">
                          <%= node.ip %>:<%= node.port %>
                        </span>
                      </div>
                    </div>
                  </div>

                  <!-- Status Icon (Animated) -->
                  <% if (node.status==="online" ) { %>
                    <div class="relative flex h-3 w-3">
                      <span
                        class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
                      <span class="relative inline-flex rounded-full h-3 w-3 bg-emerald-500"></span>
                    </div>
                    <% } else if (node.status==="dockernotrunning" ) { %>
                      <div class="h-3 w-3 rounded-full bg-yellow-500 animate-pulse"></div>
                      <% } else { %>
                        <div class="h-3 w-3 rounded-full bg-red-500"></div>
                        <% } %>
                </div>

                <!-- Stats -->
                <div class="mb-6 grid grid-cols-2 gap-4">
                  <div class="rounded-lg bg-neutral-900/40 p-3 transition-colors group-hover:bg-neutral-900">
                    <p class="text-xs font-medium uppercase tracking-wider text-neutral-500">Cores</p>
                    <p class="font-mono text-sm text-white">
                      <%= node.core %>
                    </p>
                  </div>
                  <div class="rounded-lg bg-neutral-900/40 p-3 transition-colors group-hover:bg-neutral-900">
                    <p class="text-xs font-medium uppercase tracking-wider text-neutral-500">RAM</p>
                    <p class="font-mono text-sm text-white">
                      <%= node.ram %> MB
                    </p>
                  </div>
                </div>

                <!-- Version Loader -->
                <div class="mb-6 flex items-center justify-between border-t border-neutral-900 pt-4">
                  <span class="text-xs text-neutral-500">Daemon Version</span>
                  <span class="node-version text-xs font-mono text-neutral-300"
                    data-node-id="<%= node.id %>">Checking...</span>
                </div>

                <!-- Actions -->
                <div class="flex items-center gap-2">
                  <a href="/admin/node/<%= node.id %>"
                    class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-neutral-100 px-4 py-2 text-sm font-bold text-black transition-all active:scale-95 hover:bg-white hover:scale-[1.02]">
                    Manage
                  </a>
                  <a href="/admin/node/<%= node.id %>/edit"
                    class="flex items-center justify-center rounded-lg border border-neutral-800 bg-neutral-900 px-3 py-2 text-neutral-400 hover:bg-neutral-800 hover:text-white hover:scale-110 active:scale-95 transition-all">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                      stroke="currentColor" class="h-4 w-4">
                      <path stroke-linecap="round" stroke-linejoin="round"
                        d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125" />
                    </svg>
                  </a>
                  <form action="/admin/node/<%= node.id %>/delete" method="POST"
                    onsubmit="return confirm('Start deleting node <%= node.name %>? This will delete all associated servers.')">
                    <button type="submit"
                      class="flex items-center justify-center rounded-lg border border-red-900/30 bg-red-900/10 px-3 py-2 text-red-500 hover:bg-red-900/20 hover:text-red-400 hover:scale-110 active:scale-95 transition-all">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor" class="h-4 w-4">
                        <path stroke-linecap="round" stroke-linejoin="round"
                          d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                      </svg>
                    </button>
                  </form>
                </div>
              </div>
              <% }) %>
          </div>
          <% } else { %>
            <!-- Empty State -->
            <div
              class="flex flex-col items-center justify-center rounded-3xl border border-dashed border-neutral-800 bg-neutral-950/30 py-24 text-center animate-scale-in">
              <div class="mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-neutral-900">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                  stroke="currentColor" class="h-8 w-8 text-neutral-500">
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M5.25 14.25h13.5m-13.5 0a3 3 0 01-3-3m3 3a3 3 0 100 6h13.5a3 3 0 100-6m-16.5-3a3 3 0 013-3h13.5a3 3 0 013 3m-19.5 0a4.5 4.5 0 01.9-2.7L5.737 5.1a3.375 3.375 0 012.7-1.35h7.126c1.062 0 2.062.5 2.7 1.35l2.587 3.45a4.5 4.5 0 01.9 2.7m0 0a3 3 0 01-3 3m0 3h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008zm-3 6h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white">No Nodes Found</h3>
              <p class="mt-2 max-w-sm text-neutral-500">Get started by creating your first node to host servers.</p>
            </div>
            <% } %>

      </div>
    </main>

    <!-- Create Node Modal -->
    <div id="createModal"
      class="fixed inset-0 z-50 hidden items-center justify-center bg-black/80 backdrop-blur-sm transition-opacity">
      <div id="modalContent"
        class="w-full max-w-md transform rounded-2xl border border-neutral-900 bg-black p-6 shadow-2xl transition-all scale-95 opacity-0">

        <div class="mb-6 flex items-center justify-between">
          <h2 class="text-lg font-bold text-white">Create New Node</h2>
          <button onclick="closeCreateModal()" class="text-neutral-500 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
              stroke="currentColor" class="h-5 w-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="space-y-4">
          <div>
            <label class="mb-1 block text-xs font-medium uppercase tracking-wider text-neutral-500">Node Name</label>
            <input id="n-name" placeholder="e.g. Local Node 1"
              class="w-full rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-2.5 text-sm text-white placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all" />
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="mb-1 block text-xs font-medium uppercase tracking-wider text-neutral-500">IP Address</label>
              <input id="n-ip" placeholder="127.0.0.1"
                class="w-full rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-2.5 text-sm text-white placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all" />
            </div>
            <div>
              <label class="mb-1 block text-xs font-medium uppercase tracking-wider text-neutral-500">Port</label>
              <input id="n-port" placeholder="3000"
                class="w-full rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-2.5 text-sm text-white placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all" />
            </div>
          </div>
        </div>

        <div class="mt-8 grid grid-cols-2 gap-3">
          <button onclick="closeCreateModal()"
            class="rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-2.5 text-sm font-bold text-neutral-300 transition-colors hover:bg-neutral-800">Cancel</button>
          <button onclick="createNode()"
            class="rounded-lg bg-white px-4 py-2.5 text-sm font-bold text-black transition-transform active:scale-95 hover:bg-neutral-200">Create
            Node</button>
        </div>

      </div>
    </div>

    <script>
      const modal = document.getElementById("createModal");
      const modalContent = document.getElementById("modalContent");

      function openCreateModal() {
        modal.classList.remove("hidden");
        modal.classList.add("flex");
        // Trigger reflow
        void modal.offsetWidth;
        modalContent.classList.remove("scale-95", "opacity-0");
        modalContent.classList.add("scale-100", "opacity-100");
      }

      function closeCreateModal() {
        modalContent.classList.remove("scale-100", "opacity-100");
        modalContent.classList.add("scale-95", "opacity-0");
        setTimeout(() => {
          modal.classList.add("hidden");
          modal.classList.remove("flex");
        }, 200);
      }

      async function createNode() {
        const name = document.getElementById("n-name").value;
        const ip = document.getElementById("n-ip").value;
        const port = document.getElementById("n-port").value;

        if (!name || !ip || !port) return alert("Please fill in all fields");

        const res = await fetch("/admin/node/create", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ name, ip, port }),
        });

        if (res.ok) location.reload();
        else alert("Failed to create node");
      }

      // Fetch Versions
      document.querySelectorAll('.node-version').forEach(el => {
        const nodeId = el.dataset.nodeId;
        fetch(`/admin/node/ver/${nodeId}`)
          .then(res => res.json())
          .then(data => { el.textContent = data.version || "Unknown"; })
          .catch(() => { el.textContent = "Error"; });
      });
    </script>

</body>

</html>