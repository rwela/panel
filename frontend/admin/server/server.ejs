<!DOCTYPE html>
<html lang="en" class="h-full bg-black text-white font-space-grotesk antialiased">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= name %> - <%= server.name %>
  </title>
  <link rel="stylesheet" href="/assets/tailwind.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap');

    .font-space-grotesk {
      font-family: 'Space Grotesk', sans-serif;
    }

    ::-webkit-scrollbar {
      width: 6px;
    }

    ::-webkit-scrollbar-track {
      background: #000;
    }

    ::-webkit-scrollbar-thumb {
      background: #333;
      border-radius: 3px;
    }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body class="flex h-full w-full overflow-hidden">

  <%- include('../../components/sidebar', { name, user }) %>

    <main class="relative flex-1 overflow-y-auto bg-black">
      <div class="mx-auto max-w-7xl px-6 py-12 md:px-12 animate-fade-in-up">

        <!-- Back Link -->
        <a href="/admin/servers"
          class="mb-6 flex items-center gap-2 text-sm text-neutral-500 hover:text-white transition-colors w-fit">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
            stroke="currentColor" class="h-4 w-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
          </svg>
          Back to Servers
        </a>

        <!-- Header -->
        <div class="mb-12 flex flex-col justify-between gap-6 md:flex-row md:items-end animate-fade-in-up delay-100">
          <div>
            <div class="flex items-center gap-4">
              <h1 class="text-3xl font-bold tracking-tight text-white md:text-4xl">
                <%= server.name %>
              </h1>
              <% if (server.suspended) { %>
                <span
                  class="inline-flex items-center rounded-full bg-red-500/10 px-2.5 py-1 text-xs font-bold text-red-500 ring-1 ring-inset ring-red-500/20 animate-pulse">Suspended</span>
                <% } else { %>
                  <span
                    class="inline-flex items-center rounded-full bg-emerald-500/10 px-2.5 py-1 text-xs font-bold text-emerald-500 ring-1 ring-inset ring-emerald-500/20">Active</span>
                  <% } %>
            </div>
            <p class="mt-2 text-neutral-400">Deployed on node <span class="font-mono text-white">
                <%= server.node?.name || "Unknown Node" %>
              </span> on <span class="font-mono text-white">
                <%= server.node?.ip %>
              </span></p>
          </div>

          <div class="flex flex-wrap gap-3">
            <button onclick="toggleSuspend('<%= server.id %>', '<%= server.suspended %>')"
              class="flex items-center gap-2 rounded-lg bg-neutral-900 border border-neutral-800 px-5 py-2.5 text-sm font-bold text-white transition-all hover:bg-neutral-800 hover:scale-105 active:scale-95">
              <% if(server.suspended) { %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                  stroke="currentColor" class="h-4 w-4">
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z" />
                </svg>
                Unsuspend
                <% } else { %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                    stroke="currentColor" class="h-4 w-4">
                    <path stroke-linecap="round" stroke-linejoin="round"
                      d="M14.25 7.756a4.5 4.5 0 100 8.488M7.5 10.5h5.25m-5.25 3h5.25M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Suspend
                  <% } %>
            </button>

            <a href="/admin/server/edit/<%= server.id %>"
              class="flex items-center gap-2 rounded-lg bg-white px-5 py-2.5 text-sm font-bold text-black transition-all hover:bg-neutral-200 hover:scale-105 active:scale-95">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="h-4 w-4">
                <path stroke-linecap="round" stroke-linejoin="round"
                  d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
              </svg>
              Edit
            </a>

            <button onclick="deleteServer('<%= server.id %>')"
              class="flex items-center gap-2 rounded-lg bg-red-600 px-5 py-2.5 text-sm font-bold text-white transition-all hover:bg-red-700 hover:scale-105 active:scale-95">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="h-4 w-4">
                <path stroke-linecap="round" stroke-linejoin="round"
                  d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
              </svg>
              Delete
            </button>
          </div>
        </div>

        <!-- Info Grid -->
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">

          <!-- Resources -->
          <div class="rounded-2xl border border-neutral-900 bg-neutral-950 p-6 animate-scale-in delay-200">
            <h2 class="mb-4 text-xs font-bold uppercase tracking-wider text-neutral-500">Resources</h2>
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div
                    class="flex h-8 w-8 items-center justify-center rounded-lg bg-neutral-900 border border-neutral-800 text-neutral-400">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                      stroke="currentColor" class="h-4 w-4">
                      <path stroke-linecap="round" stroke-linejoin="round"
                        d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25" />
                    </svg>
                  </div>
                  <span class="text-sm font-medium text-neutral-300">CPU</span>
                </div>
                <span class="font-mono text-sm font-bold text-white">
                  <%= server.core %> Cores
                </span>
              </div>

              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div
                    class="flex h-8 w-8 items-center justify-center rounded-lg bg-neutral-900 border border-neutral-800 text-neutral-400">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                      stroke="currentColor" class="h-4 w-4">
                      <path stroke-linecap="round" stroke-linejoin="round"
                        d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375m16.5 0v3.75m-16.5-3.75v3.75m16.5 0v3.75C20.25 16.153 16.556 18 12 18s-8.25-1.847-8.25-4.125v-3.75m16.5 0c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125" />
                    </svg>
                  </div>
                  <span class="text-sm font-medium text-neutral-300">RAM</span>
                </div>
                <span class="font-mono text-sm font-bold text-white">
                  <%= server.ram %> MB
                </span>
              </div>

              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div
                    class="flex h-8 w-8 items-center justify-center rounded-lg bg-neutral-900 border border-neutral-800 text-neutral-400">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                      stroke="currentColor" class="h-4 w-4">
                      <path stroke-linecap="round" stroke-linejoin="round"
                        d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375m16.5 0v3.75m-16.5-3.75v3.75m16.5 0v3.75C20.25 16.153 16.556 18 12 18s-8.25-1.847-8.25-4.125v-3.75m16.5 0c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125" />
                    </svg>
                  </div>
                  <span class="text-sm font-medium text-neutral-300">Disk</span>
                </div>
                <span class="font-mono text-sm font-bold text-white">
                  <%= server.disk %> MB
                </span>
              </div>
            </div>
          </div>

          <!-- Ownership -->
          <div class="rounded-2xl border border-neutral-900 bg-neutral-950 p-6 animate-scale-in delay-300">
            <h2 class="mb-4 text-xs font-bold uppercase tracking-wider text-neutral-500">Ownership & Image</h2>
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <span class="text-sm text-neutral-400">Owner</span>
                <a href="/admin/user/<%= owner?.id %>"
                  class="flex items-center gap-2 text-sm font-bold text-white hover:underline decoration-neutral-500">
                  <div
                    class="h-5 w-5 rounded-full bg-gradient-to-br from-neutral-800 to-black border border-neutral-700">
                  </div>
                  <%= owner?.username || "Unknown" %>
                </a>
              </div>

              <div class="flex items-center justify-between">
                <span class="text-sm text-neutral-400">Docker Image</span>
                <span class="text-sm font-medium text-white">
                  <%= image?.name || "Unknown" %>
                </span>
              </div>

              <div class="flex items-center justify-between">
                <span class="text-sm text-neutral-400">Daemon Port</span>
                <span class="font-mono text-sm font-medium text-white">
                  <%= server.port %>
                </span>
              </div>

              <div class="flex items-center justify-between">
                <span class="text-sm text-neutral-400">Created At</span>
                <span class="text-xs font-medium text-neutral-500">
                  <%= new Date(server.createdAt).toLocaleString() %>
                </span>
              </div>
            </div>
          </div>

          <!-- Quick Actions -->
          <div class="rounded-2xl border border-neutral-900 bg-neutral-950 p-6 animate-scale-in delay-400">
            <h2 class="mb-4 text-xs font-bold uppercase tracking-wider text-neutral-500">Identifier</h2>
            <div class="space-y-4">
              <div class="space-y-2">
                <label class="text-xs font-bold text-neutral-500">Server UUID</label>
                <div class="relative group cursor-pointer" onclick="navigator.clipboard.writeText('<%= server.id %>')">
                  <div
                    class="rounded-lg border border-neutral-800 bg-neutral-900 px-3 py-2 font-mono text-xs text-neutral-400 transition-colors group-hover:bg-neutral-800 group-hover:text-white truncate">
                    <%= server.id %>
                  </div>
                  <div
                    class="absolute right-2 top-1/2 -translate-y-1/2 text-neutral-600 group-hover:text-white transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                      stroke="currentColor" class="h-4 w-4">
                      <path stroke-linecap="round" stroke-linejoin="round"
                        d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 01-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 011.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 00-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 01-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 00-3.375-3.375h-1.5a1.125 1.125 0 01-1.125-1.125v-1.5a3.375 3.375 0 00-3.375-3.375H9.75" />
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>

      </div>
    </main>

    <script>
      async function deleteServer(id) {
        if (!confirm("Permanently delete this server? This cannot be undone.")) return;
        try {
          const res = await fetch(`/admin/servers/delete/${id}`, { method: "DELETE" });
          if (res.ok) window.location.href = "/admin/servers";
          else alert("Failed to delete server");
        } catch (e) { alert("Failed to delete server"); }
      }

      async function toggleSuspend(id, suspended) {
        const action = suspended === "true" ? "unsuspend" : "suspend";
        try {
          const res = await fetch(`/admin/servers/${action}/${id}`, { method: "POST" });
          if (res.ok) location.reload();
          else alert("Action failed");
        } catch (e) { alert("Action failed"); }
      }
    </script>
</body>

</html>