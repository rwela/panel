<!DOCTYPE html>
<html lang="en" class="h-full bg-black text-white font-space-grotesk antialiased">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= name %> - <%= server.name %> Startup
  </title>
  <link rel="stylesheet" href="/assets/tailwind.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap');

    .font-space-grotesk {
      font-family: 'Space Grotesk', sans-serif;
    }

    ::-webkit-scrollbar {
      width: 6px;
    }

    ::-webkit-scrollbar-track {
      background: #000;
    }

    ::-webkit-scrollbar-thumb {
      background: #333;
      border-radius: 3px;
    }

    .tab-btn[data-state="active"] {
      @apply bg-white text-black;
    }

    .tab-btn[data-state="inactive"] {
      @apply text-neutral-400 hover:text-white hover:bg-neutral-900;
    }
  </style>
</head>

<body class="flex h-full w-full overflow-hidden">

  <%- include('../components/sidebar', { name: name, user: user }) %>

    <main class="relative flex-1 overflow-y-auto bg-black">
      <div class="mx-auto max-w-5xl px-6 py-12 md:px-12">

        <!-- Header -->
        <div class="mb-12">
          <h1 class="text-3xl font-bold tracking-tight text-white md:text-4xl">Server Startup</h1>
          <p class="mt-2 text-neutral-400">Manage environment variables, Startup Commands and more.</p>
        </div>
           <% if (req.query.env==='saved' ) { %>
                <div
                  class="mb-6 flex items-center gap-3 rounded-xl border border-indigo-900/50 bg-indigo-950/20 px-4 py-3 text-sm text-indigo-200">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                    stroke="currentColor" class="h-5 w-5 text-indigo-500">
                    <path stroke-linecap="round" stroke-linejoin="round"
                      d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Variables saved successfully.
                </div>
                <% } %>

        <div class="space-y-6">

          <!-- Startup Command -->
          <div class="rounded-2xl bg-neutral-950 p-6">
            <h2 class="text-2xl font-bold text-white">Startup Command</h2>
            <p class="mt-2 text-neutral-400">Define the command that will be executed to start your server.</p>
            <form id="startup-form" class="mt-4 space-y-4">
              <div>
                <label for="startup-command" class="block text-sm font-medium text-white">Startup Command</label>
                <input type="text" name="startup-command" id="startup-command" value="<%= server.image.startCmd.replace(/{{(.*?)}}/g, (_, key) => server.image.env[key] ?? `{{${key}}}`) %>"
                  class="flex-1 rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-2.5 text-sm text-white w-full placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all" disabled>
              </div>
            </form>
          </div>
          <div class="rounded-2xl bg-neutral-950 p-6">
             <h2 class="text-2xl font-bold text-white">Stop Command</h2>
                <p class="mt-2 text-neutral-400">Define the command that will be executed to stop your server.</p>
                <form id="stop-form" class="mt-4 space-y-4">
                  <div>
                    <label for="stop-command" class="block text-sm font-medium text-white">Stop Command</label>
                    <input type="text" name="stop-command" id="stop-command" value="<%= server.image.stopCmd.replace(/{{(.*?)}}/g, (_, key) => server.image.env[key] ?? `{{${key}}}`) %>"
                      class="flex-1 rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-2.5 text-sm text-white w-full placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all" disabled>
                  </div>
                </form>
        </div>
              <!-- ENV VARS -->
                      <div class="rounded-2xl border border-neutral-900 bg-neutral-950 p-6">
                        <h2 class="mb-1 text-lg font-bold text-white">Environment Variables</h2>
                        <p class="mb-6 text-sm text-neutral-500">Configure the startup parameters for your server.</p>

                        <% if (!server.env || Object.keys(server.env).length===0) { %>
                          <div
                            class="rounded-xl border border-dashed border-neutral-800 bg-neutral-900/30 p-8 text-center text-neutral-500">
                            No environment variables found.
                          </div>
                          <% } else { %>
                            <form method="POST" action="/server/settings/<%= server.id %>/envs" class="space-y-4">
                              <% Object.entries(server.env).forEach(([key, value])=> { %>
                                <div
                                  class="flex items-center gap-4 rounded-xl border border-neutral-900 bg-neutral-900/30 p-4 transition-colors hover:border-neutral-800">
                                  <div class="w-1/3 shrink-0">
                                    <label class="block text-xs font-bold uppercase tracking-wider text-neutral-500">
                                      <%= key %>
                                    </label>
                                  </div>
                                  <div class="flex-1">
                                    <input type="text" name="env[<%= key %>]" value="<%= value %>"
                                      class="w-full rounded-lg border border-neutral-800 bg-neutral-900 px-4 py-2 text-sm text-white placeholder-neutral-600 outline-none focus:border-white focus:ring-1 focus:ring-white transition-all" />
                                  </div>
                                </div>
                                <% }) %>
                                  <div class="flex justify-end pt-4">
                                    <button type="submit"
                                      class="rounded-lg bg-white px-5 py-2.5 text-sm font-bold text-black transition-transform active:scale-95 hover:bg-neutral-200">
                                      Save Variables
                                    </button>
                                  </div>
                            </form>
                            <% } %>
                      </div>
        </div>
        </div>
    </main>
</body>
</html>