<!DOCTYPE html>
<html lang="en" class="bg-neutral-950 text-gray-100 font-space-grotesk">
<head>
  <meta charset="UTF-8">
  <title><%= name %> - <%= server.name %> Network</title>

  <!-- Tailwind -->
 <link rel="stylesheet" href="/assets/tailwind.css">

  <!-- Icons -->
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="min-h-screen flex">

  <!-- Sidebar -->
  <%- include('../components/sidebar', { name: name, user: user }) %>

  <main class="flex-1 p-8 overflow-auto">
    <div class="max-w-6xl mx-auto space-y-6">

      <!-- Header -->
          <div
          class="bg-neutral-950 border border-neutral-900 rounded-md px-6 py-4 flex items-center justify-between"
        >
          <!-- LEFT INFO -->
          <div class="flex items-start gap-3">
            <div class="leading-tight">
              <p class="text-lg font-semibold text-gray-100">
                <%= server.name %>
              </p>
               <p class="flex items-center gap-2 text-sm text-gray-400">
                <i data-lucide="globe" class="w-4 h-4 text-gray-500"></i>
                <span class="cursor-pointer " onclick="navigator.clipboard.writeText('<%= server.ip || '0.0.0.0' %>:<%= server.port %>'); 
             alert('Copied to clipboard!')">
                  <%= server.ip || '0.0.0.0' %>:<%= server.port %>
                      <span class="mx-1">â€¢</span>
                      <%= server.node?.name || 'unknown' %>
                </span>
              </p>
            </div>
          </div>
        </div>

      <!-- Navigation -->
<div class="bg-neutral-950 border border-neutral-900 rounded-lg overflow-hidden">
  <table class="w-full table-auto text-left border-collapse">
    <thead class="text-neutral-400 uppercase text-xs border-b border-neutral-800">
      <tr>
        <th class="px-4 py-2">Port</th>
        <th class="px-4 py-2">Type</th>
        <th class="px-4 py-2">Node</th>
        <th class="px-4 py-2 text-right">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% if (!allocations || allocations.length === 0) { %>
        <tr>
          <td colspan="4" class="px-4 py-6 text-neutral-500 italic">
            No allocations assigned to this server on its node.
          </td>
        </tr>
      <% } else { %>
        <% allocations.forEach(a => { %>
          <tr class="border-b border-neutral-800 hover:bg-neutral-900/50 transition-colors">
            <td class="px-4 py-2 font-mono text-neutral-100"><%= a.port %></td>

            <td class="px-4 py-2">
              <% if (a.type === 'primary') { %>
                <span class="text-xs px-2 py-0.5 rounded-full bg-indigo-600/20 text-indigo-400">Primary</span>
              <% } else { %>
                <span class="text-xs px-2 py-0.5 rounded-full bg-neutral-600/20 text-neutral-400">Secondary</span>
              <% } %>
            </td>

            <td class="px-4 py-2 text-neutral-400"><%= server.node?.name || server.node?.ip || 'Unknown' %></td>

            <td class="px-4 py-2 text-right">
              <div class="inline-flex gap-2">
                <% if (a.type !== 'primary') { %>
                  <form method="POST" action="/server/network/<%= server.id %>/setprimary/<%= a.port %>">
                    <button class="px-3 py-1 text-xs font-semibold rounded-lg bg-indigo-600 hover:bg-indigo-700 transition">Set Primary</button>
                  </form>
                <form method="POST" action="/server/network/<%= server.id %>/remove/<%= a.port %>">
                  <button class="px-3 py-1 text-xs font-semibold rounded-lg bg-red-600 hover:bg-red-700 transition">Remove</button>
                </form>
                  <% } %>
              </div>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

      <!-- Add Port -->
      <div class="bg-neutral-950 border border-neutral-800 rounded-md p-6 space-y-4">
        <h2 class="text-xl font-semibold flex items-center gap-2">
          <i data-lucide="plus-circle" class="w-5 h-5"></i>
          Add New Port
        </h2>

        <form
          onsubmit="event.preventDefault(); addPort();"
          class="flex gap-3"
        >
          <input
            id="new-port"
            type="number"
            min="1"
            max="65535"
            placeholder="3000"
            class="flex-1 p-3 rounded-xl bg-neutral-950 border border-neutral-700 text-gray-100"
            required
          />

          <button
            type="submit"
            class="px-5 py-3 rounded-xl bg-indigo-600 hover:bg-indigo-700">
            Add Port
          </button>
        </form>

        <p class="text-sm text-gray-400">
          Adding or removing ports will recreate the container.
        </p>
      </div>

    </div>
  </main>

  <script>
    lucide.createIcons();

    function addPort() {
      const port = document.getElementById('new-port').value;
      if (!port) return;

      window.location.href =
        `/server/network/<%= server.id %>/add/${port}`;
    }
  </script>

</body>
</html>
