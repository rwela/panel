        >
          <!-- LEFT INFO -->
          <div class="flex items-start gap-3">
            <!-- Status dot -->
            <span id="status-dot" class="mt-2"></span>

            <div class="leading-tight">
              <p class="text-lg font-semibold text-gray-100">
                <%= server.name %>
